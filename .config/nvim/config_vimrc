" Set runtime path to enable python support for powerline fonts
set rtp+=/usr/local/lib/python2.7/site-packages/powerline/bindings/vim
"----------------------------------------------------------------------------------------
" Set fonts
set guifont=Meslo\ LG\ S\ for\ Powerline
" ---------------------------------------------------------------------------------------
" See the 100th Column width line
" if (exists('+colorcolumn'))
"   set colorcolumn=100
"   highlight ColorColumn ctermbg=9
" endif

" Enable Tab completion in commands
set wildmenu

" Set Colorscheme for vim - inbuilt
colorscheme default

" Set syntx highlighing on
if has("syntax")
  syntax on
endif

" invisible characters symbols
set lcs=tab:▸\ ,eol:¬
",space:.

" show invisible characters by default
set list

" spaces instead of tabs
" tabstop - how many columns a tab counts for
" shiftwidth - how many columns text is indeneted
" expandtab - convert tabs to spaces
set tabstop=2 shiftwidth=2 expandtab


" set ctags diectory to be used by nvim
" set autochdir
set tags=./tags,tags;/

" show line numbers in vim
set number

" Highlight current line
set cursorline

" Allow opening of new buffers when current buffer have unsaved changes
" This will hide the current buffer instead of closing it
set hidden

" auto load file if its changed outside of vim
set autoread

" show matching parenthesis
set showmatch

" ignore case when searching
set ignorecase

" ignore case if search pattern is all lowercase,
" case-sensitive otherwise
set smartcase

" show search matches as you type
set incsearch

" folding in vim
set foldmethod=syntax
set foldnestmax=5
set nofoldenable
set foldlevel=2

" treat - _ as part of word
set iskeyword+=-
set iskeyword+=_
