" Set runtime path to enable python support for powerline fonts
set rtp+=/usr/local/lib/python2.7/site-packages/powerline/bindings/vim
" add run time path for fzf (installed via brew install)
set rtp+=/usr/local/opt/fzf
"----------------------------------------------------------------------------------------
" Set fonts
" if has('gui_vimr')
  " set guifont=Source\ Code\ Pro\ for\ Powerline
  " guifont option not supported by vimr
  " see this - https://github.com/qvacua/vimr/issues/259
" endif
" ---------------------------------------------------------------------------------------
" See the 100th Column width line
" if (exists('+colorcolumn'))
"   set colorcolumn=100
"   highlight ColorColumn ctermbg=9
" endif

" Enable Tab completion in commands
set wildmenu

" Set Colorscheme for vim - inbuilt
colorscheme default

" https://apple.stackexchange.com/questions/266034/iterm2-applies-strange-color-to-vims-default
set termguicolors
set background=dark

" Set syntx highlighing on
if has("syntax")
  syntax on
endif

" invisible characters symbols
set lcs=tab:▸\ ,eol:¬
",space:.

" show invisible characters by default
set list

" spaces instead of tabs
" tabstop - how many columns a tab counts for
" shiftwidth - how many columns text is indeneted
" expandtab - convert tabs to spaces
set tabstop=2 shiftwidth=2 expandtab


" set ctags diectory to be used by nvim
" set autochdir
set tags=./tags,tags;$HOME

" show line numbers in vim
set number

" Highlight current line
set cursorline

" Allow opening of new buffers when current buffer have unsaved changes
" This will hide the current buffer instead of closing it
set hidden

" always show signcolumns
set signcolumn=yes

" auto load file if its changed outside of vim
set autoread

" show matching parenthesis
set showmatch

" ignore case when searching
set ignorecase

" ignore case if search pattern is all lowercase,
" case-sensitive otherwise
set smartcase

" show search matches as you type
set incsearch

" folding in vim
" The nesting of folds is limited with foldnestmax
" if the current fold is nested -> class -> def -> if -> do etc
" till how much it will be folded
" For getting folds from solargraph
augroup rubyFolding
  autocmd! FileType ruby
  set foldmethod=manual
augroup END

" treat -(Dash) _(Underscore) as part of word
set iskeyword+=-,_
" treat !(Bang) and ?(Question Mark) as keyword for Ruby files
augroup rubyKeywords
  autocmd! FileType ruby,eruby set iskeyword+=!,?
augroup END

" Omnicomplete Configurations
" set omnifunc=syntaxcomplete#Complete
" noinsert - don't select the first completion item,
" menu - show select menu
" menuone - show menu even if there is only one match
" preview - Show extra information about the currently selected completion in the preview window
" set completeopt=menu,menuone,preview,noselect,noinsert

" Enable mouse scrolling
set mouse=a

" To make git gutter change symbols on sign column faster
set updatetime=100

" For which key - if there are no further keystrokes within this time the
" guide will pop up after pressing the key to get keybindings
set timeoutlen=500

" Show Tabline to show buffers name on top
set showtabline=2

" As we will show modes in status line
" We don't want to show modes in command line
set noshowmode

" Netrw Settings
let g:netrw_banner = 0
let g:netrw_liststyle = 3
let g:netrw_browse_split = 4
let g:netrw_winsize = 25

" Don't do the syntax highlight on lines which are longer than 500 characters
set synmaxcol=500
