{
  // Code Insights
  "codeLens.enable": true,
  // Use Quickfix lists instead of CocLists
  // "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.colorSupport": true,
  // Diagnostics - Warnings, Lintings etc
  "diagnostic.displayByAle": true,
  //"diagnostic.refreshAfterSave": true,
  //"diagnostic.checkCurrentLine": true,
  //"diagnostic.refreshOnInsertMode": true,
  //"diagnostic.signOffset": 9999999,
  //"diagnostic.infoSign": "◆",
  //"diagnostic.hintSign": "!",
  //"diagnostic.errorSign": "✗",
  //"diagnostic.warningSign": "⚠",
  // Completion Items Settings
  "suggest.disableMenu": true,
  "suggest.echodocSupport": true,
  "suggest.floatEnable": true,
  "suggest.localityBonus": true,
  "suggest.minTriggerInputLength": 2,
  "suggest.timeout": 4000,
  // coc-git
  //"git.enableGutters": true,
  //"git.branchCharacter":"",
  //"git.addedSign.text":"+",
  //"git.changedSign.text": "~",
  //"git.removedSign.text":"-",
  //"git.topRemovedSign.text": "▔",
  //"git.changeRemovedSign.text": "▋",
  // coc-snippets
  // write snippets in format of ultisnips
  "snippets.ultisnips.enable": true,
  "snippets.snipmate.enable": false,
  // coc-solargraph
  //"solargraph.completion": true,
  //"solargraph.hover": true,
  //"solargraph.diagnostics": false,
  //"solargraph.autoformat": false,
  //"solargraph.formatting": false,
  //"solargraph.symbols": true,
  //"solargraph.definitions": true,
  //"solargraph.rename": true,
  //"solargraph.references": true,
  //"solargraph.folding":true,
  //"solargraph.logLevel": "warn"
  "solargraph.trace.server": "messages",
  // coc-eslint (for js)
  "eslint.run": "onSave",
  "eslint.trace.server": "verbose",
  // coc-stylelintplus (for css)
  // Disable coc-css to stop getting double error messages
  // "css.validate": false,
  // "less.validate": false,
  // "scss.validate": false,
  // "wxss.validate": false,
  // "stylelintplus.validateOnSave": true,
  // "stylelintplus.validateOnType": false
}
